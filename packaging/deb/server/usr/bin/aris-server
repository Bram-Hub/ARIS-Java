#!/bin/bash

if [ "$(id -u)" -ne "0" ]; then
    echo This script must be run as root
    exit 1
fi

ARIS=/usr/lib/aris
TMP=$(dirname $(mktemp -u))
RC=52
while [ $RC -eq 52 ]; do
    sudo -u aris java -Djava.io.tmpdir="$TMP" -jar /usr/lib/aris/aris-server.jar
    RC=$?
    if [ $RC -eq 52 ]; then
	echo -n Updating aris ...
        sudo -u aris rm -rf /usr/lib/aris/*
	sudo -u aris cp -r $TMP/aris-update/* /usr/lib/aris
	echo " Done"
    fi
done
exit $RC
