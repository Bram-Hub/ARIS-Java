#!/bin/bash

if [ "$(id -u)" -ne "0" ] && [ "$USER" != "aris" ]; then
        echo This script must be run as root
        exit 1
fi

add_user() {
    read -p "Please enter the username for the new user: " USER
    if [ "$USER" -eq "" ]; then
        echo "No username entered"
        exit 1
    fi
    read -s -p "Enter the password for $USER: " PASS
    if [ "$PASS" -eq "" ]; then
        echo "No password entered"
        exit 1
    fi
    read -s -p "Repeat the password for $USER: " REPASS
    if [ "$PASS" -ne "$REPASS" ]; then
        echo "Passwords do not match"
        unset PASS
        unset REPASS
        exit 1
    fi
    unset REPASS
    if [ ! pgrep -x "aris-server" &> /dev/null ]; then
        rm /tmp/aris*
    fi
    TMP=$(dirname $(mktemp -u))
    LOGDIR=$(cat /etc/aris.cfg | grep log-dir)
    if [ $? -ne 0 ]; then
        echo log-dir not specified in /etc/aris.cfg
        RC=1
        return
    fi
    LOGDIR=$(echo ${LOGDIR#"log-dir"} | xargs)
    java -Djava.io.tmpdir="$TMP" -Dlog4j.log-dir="$LOGDIR" -jar /usr/lib/aris/aris-server.jar --add-user "$USER" --password "$PASS"
}

if [ "$USER" = "aris" ]; then
    add_user
else
    sudo -u aris bash -c "$(declare -f add_user); add_user"
fi

exit $RC
