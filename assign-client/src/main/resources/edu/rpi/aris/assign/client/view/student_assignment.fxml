<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<BorderPane xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1">
    <top>
        <HBox alignment="CENTER_LEFT" spacing="5.0" BorderPane.alignment="CENTER">
            <children>
                <Label fx:id="name" text="Name:">
                    <font>
                        <Font name="System Bold" size="13.0"/>
                    </font>
                </Label>
                <Label text="Due"/>
                <Label fx:id="dueDate" text="Due Date"/>
                <Separator visible="false" HBox.hgrow="ALWAYS"/>
                <Label fx:id="status" text="Status"/>
                <ImageView fx:id="statusIcon" fitHeight="25.0" fitWidth="25.0" pickOnBounds="true"
                           preserveRatio="true"/>
            </children>
        </HBox>
    </top>
    <padding>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
    </padding>
    <center>
        <TreeTableView prefHeight="200.0" prefWidth="200.0" sortMode="ONLY_FIRST_LEVEL" BorderPane.alignment="CENTER">
            <columns>
                <TreeTableColumn prefWidth="75.0" text="C1"/>
                <TreeTableColumn prefWidth="75.0" text="C2"/>
            </columns>
            <columnResizePolicy>
                <TreeTableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TreeTableView>
    </center>
</BorderPane>
